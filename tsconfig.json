{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/tsc-out",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "jsx": "react-native",
    "module": "es2015",
    "target": "es2017",
    "lib": [
      "es2015",
      "es2016"
    ],
    "paths": {
      "@src/*": ["./src/*"],
      "@kitten/*": ["../react-native-ui-kitten/src/framework/*"]
    },
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "./src/**/*",
    "../react-native-ui-kitten/src/framework"
  ],
  "exclude": [
    "./node_modules",
    "../react-native-ui-kitten/node_modules/**/*",
    "../react-native-ui-kitten/**/*.spec.ts",
    "../react-native-ui-kitten/**/*.spec.tsx"
  ]
}
